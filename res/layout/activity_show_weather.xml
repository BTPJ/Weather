<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light" >

    <RelativeLayout
        android:id="@+id/relativeLayout_show_weather_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/holo_green_dark" >

        <Button
            android:id="@+id/button_switch_area"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:background="@drawable/home" />

        <TextView
            android:id="@+id/textView_show_weather_title"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Title"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_refresh_weather"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="@drawable/refresh" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/relativeLayout_show_weather_title"
        android:layout_margin="8dp"
        android:text="今天18:00发布"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView_weather_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="小雨转中雨"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView_weather_details"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="2015年7月3日"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_weather_details"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="23度—33度"
        android:textColor="#ffffff"
        android:textSize="35sp" />

</RelativeLayout>